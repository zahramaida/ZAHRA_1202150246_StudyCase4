<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.zahra_1202150246_modul4.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listNama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:text="Let's Start"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/listNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cariGambar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:padding="15dp"
        android:background="@color/merahoren"
        android:textColor="@color/black"
        android:onClick="listNama"
        android:text="List Nama Mahasiswa" />

    <Button
        android:id="@+id/cariGambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:background="@color/merahoren"
        android:textColor="@color/black"
        android:onClick="cariGambar"
        android:text="Pencari Gambar" />


</RelativeLayout>
